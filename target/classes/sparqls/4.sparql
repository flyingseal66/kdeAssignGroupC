PREFIX rdf: <http://www.w3.org/1999/02/22-rdf-syntax-ns#>
PREFIX owl: <http://www.w3.org/2002/07/owl#>
PREFIX rdfs: <http://www.w3.org/2000/01/rdf-schema#>
PREFIX xsd: <http://www.w3.org/2001/XMLSchema#>
PREFIX base: <http://www.gov.ie/groupC/NIAH#>

SELECT (?count1 - ?count2 AS ?difference) (?count1 AS ?max) (?count2 AS ?min)
WHERE{
{
    SELECT ?c1 (SUM(?b1) AS ?count1) ?area1
    WHERE {
        ?heritage base:inCounty ?c1.
        ?heritage base:boyCount ?b1.
        ?c1 base:area ?area1.
    }
    GROUP BY ?c1 ?area1
    ORDER BY DESC(?area1)
    LIMIT 1
}
{
   SELECT ?c2 (SUM(?b2) AS ?count2) ?area2
    WHERE {
        ?heritage base:inCounty ?c2.
        ?heritage base:boyCount ?b2.
        ?c2 base:area ?area2.
    }
    GROUP BY ?c2 ?area2
    ORDER BY ?area2
    LIMIT 1
}
}
